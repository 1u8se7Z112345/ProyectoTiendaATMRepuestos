<div class="col mb-5">
    <div class="card h-100 shadow-lg border-light">
        <div class="text-center">
            @if (string.IsNullOrEmpty(Producto.UrlImagen))
            {
                <img class="card-img-top border-dark border-1 producto-card" src="assets/images/sinimagen.jpeg"
                     alt="@Producto.Nombre" />
            }
            else
            {
                <img class="card-img-top border-dark border-1 producto-card"
                     src="@Producto.UrlImagen" alt="@Producto.Nombre" />
            }
        </div>
        <div class="card-body p-4 text-center">
            <h5 class="fw-bolder">@Producto.Nombre</h5>
            <span><small>@Producto.Marca</small></span><br>
            <span>S/ @Producto.Precio.ToString("N2")</span>
            
        </div>
        <div class="card-footer">
            <div class="text-center">
                <a class="btn btn-outline-info mt-auto" @onclick="() => OnClick.InvokeAsync(Producto.Id)">Ver Producto</a>
            </div>
        </div>
    </div>
</div>

@code {

    [EditorRequired]
    [Parameter]
    public ProductoDtoResponse Producto { get; set; } = null!;

    [Parameter]
    public EventCallback<int> OnClick { get; set; }
}
